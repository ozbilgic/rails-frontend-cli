#!/usr/bin/env ruby

# Rails Frontend CLI wrapper script
# Bu script rails_frontend_setup.rb dosyasını çağırır

# Script'in gerçek konumunu bul (symlink'leri takip ederek)
script_path = File.realpath(__FILE__)
script_dir = File.dirname(script_path)
main_script = File.join(script_dir, 'rails_frontend_setup.rb')

unless File.exist?(main_script)
  puts "HATA: rails_frontend_setup.rb bulunamadı: #{main_script}"
  exit 1
end

require main_script

cli = RailsFrontendCLI.new
cli.calistir(ARGV)
